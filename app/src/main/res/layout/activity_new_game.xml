<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    tools:context="com.example.cyberpaths.multigame.newGame"
    android:weightSum="1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="@string/_0"
        android:id="@+id/player1score"
        android:textSize="50sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/player1score"
        android:text="@string/player_1"
        android:id="@+id/player1"
        android:textSize="30sp"
        android:layout_marginLeft="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player_2"
        android:id="@+id/player2"
        android:layout_toLeftOf="@+id/player2score"

        android:textSize="30sp"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/player2score"
        android:text="@string/player2score"
        android:layout_alignParentRight="true"
        android:textSize="50sp" />



    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/player1score">

        <Button
            android:id="@+id/one"
            android:layout_width="115dp"
            android:layout_height="100dp"
            android:text="-"
            android:textSize="50sp"/>

        <view
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"/>
        <Button
            android:id="@+id/two"
            android:layout_width="115dp"
            android:layout_height="100dp"
            android:layout_toRightOf="@id/one"
            android:text="-"
            android:textSize="50sp" />

        <Button
            android:id="@+id/three"
            android:layout_width="115dp"
            android:layout_height="100dp"
            android:layout_toRightOf="@id/two"
            android:text="-"

            android:textSize="50sp" />

        <Button
            android:id="@+id/four"
            android:layout_width="115dp"
            android:layout_height="100dp"
            android:layout_alignEnd="@+id/seven"
            android:layout_alignRight="@+id/seven"
            android:layout_below="@+id/one"
            android:text="-"
            android:textSize="50sp" />

        <Button
            android:id="@+id/five"
            android:layout_width="115dp"
            android:layout_height="100dp"
            android:layout_below="@+id/two"
            android:layout_toEndOf="@+id/four"
            android:layout_toRightOf="@+id/four"
            android:text="-"
            android:textSize="50sp" />

        <Button
            android:id="@+id/six"
            android:layout_width="115dp"
            android:layout_height="100dp"
            android:layout_below="@+id/three"
            android:layout_toEndOf="@+id/two"
            android:layout_toRightOf="@+id/two"
            android:text="-"
            android:textSize="50sp" />

        <Button
            android:id="@+id/seven"
            android:layout_width="115dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/eight"
            android:layout_toLeftOf="@+id/eight"
            android:layout_toStartOf="@+id/eight"
            android:text="-"
            android:textSize="50sp" />

        <Button
            android:id="@+id/eight"
            android:layout_width="115dp"
            android:layout_height="100dp"
            android:layout_below="@+id/five"
            android:layout_toLeftOf="@+id/six"
            android:layout_toStartOf="@+id/six"
            android:text="-"
            android:textSize="50sp" />

        <Button
            android:id="@+id/nine"
            android:layout_width="115dp"
            android:layout_height="100dp"
            android:layout_below="@+id/six"
            android:layout_toEndOf="@+id/five"
            android:layout_toRightOf="@+id/five"
            android:text="-"
            android:textSize="50sp" />

    </RelativeLayout>
</RelativeLayout>

